<!DOCTYPE html>

<html lang="en">

<head>
    <!-- Leaflet CSS and JavaScript (in this order) -->
    <link rel='stylesheet' href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css'
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header class="header">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location">
        <h1 class="header__title">GeoTagApp</h1>
        <nav class="header__navigation">
            <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>

    <main class="main">
        <section class="main__tagging tagging">
            <h2>Tagging</h2>

            <!-- ############### VS1Lab 1a Form 1 Start -->
            <form id="tag-form" action="/tagging" method="post">

                <fieldset>
                    <legend class="tagging_legend">Add a new  GeoTag</legend>
                    
                    <label for="tagging_latitude">Latitude:</label>
                    <input id="tagging_latitude" type="text" pattern="\d.\d+" readonly placeholder="49.1253324">

                    <label for="tagging_longitude">Longitude:</label>
                    <input id="tagging_longitude" type="text" pattern="\d.\d+" readonly placeholder="8.4">

                    <label for="tagging_name">Name:</label>
                    <input id="tagging_name" type="text" pattern="^[A-Z][a-z]*$" required placeholder="Insterburg" maxlength="10">

                    <label for="tagging_tag">Hashtag:</label>
                    <input id="tagging_tag" type="text" pattern="#([a-z]|[A-Z])+" placeholder="#insterburg" maxlength="11">

                    <input id="tagging_submit" type="submit" value="Add Tag">
                </fieldset>

            </form>
            <!-- ############### VS1Lab 1a Form 1 End -->

        </section>

        <section class="main__discovery discovery">
            <h2 class="discovery__title">Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="discovery__search" id="discoveryFilterForm" action="/discovery" method="post">

                <fieldset>
                    <legend class="discovery_legend">Discovery</legend>

                    <label for="discovery_search">Search term or keyword:</label>
                    <input id="discovery_search" type="text" required placeholder="e.g Insterburg">

                    <input id="discovery_latitude" type="text" hidden>
                    <input id="discovery_longitude" type="text" hidden>

                    <input id="discovery_submit" type="submit" value="Search">
                </fieldset>

            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->

            <div class="discovery__wrapper">
                <div class="discovery__taglist">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                    </ul>
                </div>

                <div class="discovery__map" id="map" data-tags="<%= JSON.stringify(taglist) %>">
                    <img src="./images/mapview.jpg" alt="a map with locations" id="mapView" />
                    <p>Result map</p>
                </div>
            </div>
        </section>

    </main>

    <footer class="footer">
        <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>

    <!-- Load JavaScripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="./javascripts/geotagging.js"></script>
    <script src="../public/javascripts/location-helper.js"></script>
    <script src="../public/javascripts/map-manager.js"></script>
</body>

</html>

